<!doctype html>
<html lang="sk">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Ručná výroba a predaj krásnych čeleniek pre deti a mamky vyrobené z kvalitných materiálov zo Slovenska. Čelenky pre mamky, čelenky pre deti, čelenky pre bábätká. Čelenky z baby friendly materiálov.">
    <meta name="author" content="Attila Jakab">
    <link rel="icon" type="image/png" href="./assets/celenka-logo.png"/>
    <title>čelenka - ručná výroba a predaj čeleniek pre deti a mamky. Čelenky pre mamky, čelenky pre deti, čelenky pre bábätká. Čelenky z baby friendly materiálov.</title>
  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" preconnect>
    <link href="/assets/css/main.min.css" rel="stylesheet">
    <script src="https://www.google.com/recaptcha/api.js?hl=sk" async defer></script>
  </head>
  <body>
    {{> header }}

    <main class="container-lg">
      <!-- FILTERS -->
      <div class="row mt-5">
        <div class="col-md-6 offset-md-6">
          <select id="type-filter" class="form-select" aria-label="Filter produktov podľa typu">
            <option selected>Filtrovať podľa typu</option>
            <option value="Všetky">Všetky</option> 
            {{#each types}}
              <option value="{{this}}">{{this}}</option> 
            {{/each}}
          </select>
        </div>
      </div>

      <!-- PRODUCTS -->
      <section id="products">
        <h2 class="mb-3 mt-5">
            <small class="text-muted">kolekcia</small>
            Dcéra
        </h2>
        <div class="row row-cols-1 row-cols-md-4 row-cols-sm-3 row-cols-2 g-2 g-sm-3 g-md-4">
            {{#each kolekciaDcera}}
                <article class="col" data-type="{{type}}">
                    <div class="card h-100">
                    <img src="{{imgThumbPath}}" class="card-img-top rounded-0" alt="Čelenka {{title}}" loading="lazy">
                    <div class="card-body position-relative">
                        <div class="card-price">{{price}}</div>
                        <h5 class="card-title">
                          <a href="{{slug}}">{{title}}</a>
                        </h5>
                    </div>
                    </div>
                </article>
            {{/each}}
        </div>

        <h2 class="mb-3 mt-5">
            <small class="text-muted">kolekcia</small>
            Mama&Dcéra
        </h2>
        <div class="row row-cols-1 row-cols-md-4 row-cols-sm-3 row-cols-2 g-2 g-sm-3 g-md-4">
            {{#each kolekciaMamaADcera}}
                <article class="col" data-type="{{type}}">
                    <div class="card h-100">
                    <img src="{{imgThumbPath}}" class="card-img-top rounded-0" alt="Čelenka {{title}}" loading="lazy">
                    <div class="card-body position-relative">
                        <div class="card-price">{{price}}</div>
                        <h5 class="card-title">
                          <a href="{{slug}}">{{title}}</a>
                        </h5>
                    </div>
                    </div>
                </article>
            {{/each}}
        </div>

        <h2 class="mb-3 mt-5">
            <small class="text-muted">kolekcia</small>
            Chlapček
        </h2>
        <div class="row row-cols-1 row-cols-md-4 row-cols-sm-3 row-cols-2 g-2 g-sm-3 g-md-4">
            {{#each kolekciaChlapcek}}
                <article class="col" data-type="{{type}}">
                    <div class="card h-100">
                      <img src="{{imgThumbPath}}" class="card-img-top rounded-0" alt="Čelenka {{title}}" loading="lazy">
                      <div class="card-body position-relative">
                          <div class="card-price">{{price}}</div>
                          <h5 class="card-title">
                            <a href="{{slug}}">{{title}}</a>
                          </h5>
                      </div>
                    </div>
                </article>
            {{/each}}
        </div>

        <h2 class="mb-3 mt-5">
            <small class="text-muted">kolekcia</small>
            Žena
        </h2>
        <div class="row row-cols-1 row-cols-md-4 row-cols-sm-3 row-cols-2 g-2 g-sm-3 g-md-4">
            {{#each kolekciaZena}}
                <article class="col" data-type="{{type}}">
                    <div class="card h-100">
                      <img src="{{imgThumbPath}}" class="card-img-top rounded-0" alt="Čelenka {{title}}" loading="lazy">
                      <div class="card-body position-relative">
                          <div class="card-price">{{price}}</div>
                          <h5 class="card-title">
                            <a href="{{slug}}">{{title}}</a>
                          </h5>
                      </div>
                    </div>
                </article>
            {{/each}}
        </div>
      </section>

      <!-- ORDER FORM -->
      {{> orderForm }}

      <!-- MODALS -->
      {{> privacyPolicyModalPartial }}
      {{> termsConditionsModalPartial }}
      {{> measurementModalPartial }}
    </main>

    <!-- Footer -->
    {{> footer }}

    <script type="text/javascript" src="/assets/js/common.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
