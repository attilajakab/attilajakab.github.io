<!doctype html>
<html lang="sk">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Ručná výroba a predaj krásnych čeleniek pre deti a mamky vyrobené z kvalitných materiálov zo Slovenska. Čelenky pre mamky, čelenky pre deti, čelenky pre bábätká. Čelenky z baby friendly materiálov.">
    <meta name="author" content="Attila Jakab">
    <link rel="icon" type="image/png" href="./assets/celenka-logo.png"/>
    <title>čelenka - ručná výroba a predaj čeleniek pre deti a mamky. Čelenky pre mamky, čelenky pre deti, čelenky pre bábätká. Čelenky z baby friendly materiálov.</title>
  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" preconnect>
    <link href="main.css" rel="stylesheet">
    <script src="https://www.google.com/recaptcha/api.js?hl=sk" async defer></script>
  </head>
  <body>
    {{> header }}

    <main class="container-lg">
      <!-- FILTERS -->
      <div class="row mt-5">
        <div class="col-md-6 offset-md-6">
          <select id="type-filter" class="form-select" aria-label="Filter produktov podľa typu">
            <option selected>Filtrovať podľa typu</option>
            <option value="Všetky">Všetky</option> 
            {{#each types}}
              <option value="{{this}}">{{this}}</option> 
            {{/each}}
          </select>
        </div>
      </div>

      <!-- PRODUCTS -->
      <section id="products">
        <h2 class="mb-3 mt-5">
            <small class="text-muted">kolekcia</small>
            Dcéra
        </h2>
        <div class="row row-cols-1 row-cols-md-4 row-cols-sm-3 row-cols-2 g-2 g-sm-3 g-md-4">
            {{#each kolekciaDcera}}
                <article class="col" data-type="{{type}}">
                    <div class="card h-100">
                    <img src="{{imgThumbPath}}" class="card-img-top rounded-0" alt="Čelenka {{title}}" loading="lazy">
                    <div class="card-body position-relative">
                        <div class="card-price">{{price}}</div>
                        <h5 class="card-title">
                          <a href="{{slug}}">{{title}}</a>
                        </h5>
                    </div>
                    </div>
                </article>
            {{/each}}
        </div>

        <h2 class="mb-3 mt-5">
            <small class="text-muted">kolekcia</small>
            Mama&Dcéra
        </h2>
        <div class="row row-cols-1 row-cols-md-4 row-cols-sm-3 row-cols-2 g-2 g-sm-3 g-md-4">
            {{#each kolekciaMamaADcera}}
                <article class="col" data-type="{{type}}">
                    <div class="card h-100">
                    <img src="{{imgThumbPath}}" class="card-img-top rounded-0" alt="Čelenka {{title}}" loading="lazy">
                    <div class="card-body position-relative">
                        <div class="card-price">{{price}}</div>
                        <h5 class="card-title">
                          <a href="{{slug}}">{{title}}</a>
                        </h5>
                    </div>
                    </div>
                </article>
            {{/each}}
        </div>

        <h2 class="mb-3 mt-5">
            <small class="text-muted">kolekcia</small>
            Chlapček
        </h2>
        <div class="row row-cols-1 row-cols-md-4 row-cols-sm-3 row-cols-2 g-2 g-sm-3 g-md-4">
            {{#each kolekciaChlapcek}}
                <article class="col" data-type="{{type}}">
                    <div class="card h-100">
                      <img src="{{imgThumbPath}}" class="card-img-top rounded-0" alt="Čelenka {{title}}" loading="lazy">
                      <div class="card-body position-relative">
                          <div class="card-price">{{price}}</div>
                          <h5 class="card-title">
                            <a href="{{slug}}">{{title}}</a>
                          </h5>
                      </div>
                    </div>
                </article>
            {{/each}}
        </div>

        <h2 class="mb-3 mt-5">
            <small class="text-muted">kolekcia</small>
            Žena
        </h2>
        <div class="row row-cols-1 row-cols-md-4 row-cols-sm-3 row-cols-2 g-2 g-sm-3 g-md-4">
            {{#each kolekciaZena}}
                <article class="col" data-type="{{type}}">
                    <div class="card h-100">
                      <img src="{{imgThumbPath}}" class="card-img-top rounded-0" alt="Čelenka {{title}}" loading="lazy">
                      <div class="card-body position-relative">
                          <div class="card-price">{{price}}</div>
                          <h5 class="card-title">
                            <a href="{{slug}}">{{title}}</a>
                          </h5>
                      </div>
                    </div>
                </article>
            {{/each}}
        </div>
      </section>

      <!-- ORDER FORM -->
      <section id="order-form" class="row justify-content-center order-form-container mt-5 pb-5">
        <h2 class="display-6 text-center mt-5 mb-4">OBJEDNÁVACÍ FORMULÁR</h2>
        <form class="col-lg-6 col-md-10 captcha-disabled">
          <div class="mb-3">
            <label for="name" class="form-label">Vaše meno</label>
            <input type="text" class="form-control" name="name" id="name" aria-describedby="nameHelp" required>
            <div id="nameHelp" class="form-text">Povinné</div>
          </div>
          <div class="mb-3">
            <label for="order-text" class="form-label">Detail Vašej objednávky</label>
            <textarea class="form-control" name="order-text" id="order-text" rows="4" placeholder="Model, veľkosť, počet kusov..." aria-describedby="orderTextHelp"></textarea>
            <div id="orderTextHelp" class="form-text">Povinné</div>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Váš email</label>
            <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" required>
            <div id="emailHelp" class="form-text">Povinné</div>
          </div>
          <div class="mb-3">
            <label for="phone" class="form-label">Vaše telefónne číslo</label>
            <input type="tel" class="form-control" name="phone" id="phone">
          </div>
          <div class="mb-3">
            <label for="delivery-address" class="form-label">Adresa doručenia</label>
            <input type="text" class="form-control" name="delivery-address" id="delivery-address" aria-describedby="deliveryAddressHelp" required>
            <div id="deliveryAddressHelp" class="form-text">Povinné</div>
          </div>
          <div class="mb-3">
            <label for="zip" class="form-label">PSČ</label>
            <input type="text" class="form-control" name="zip" id="zip" aria-describedby="zipHelp" required>
            <div id="zipHelp" class="form-text">Povinné</div>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="gdpr" requi red>
            <label class="form-check-label" for="gdpr">
              <small> 
                Súhlasím s tým, aby táto webová stránka uchovala moje predložené informácie, aby na ich základe mohli zrealizovať objednávku.
              </small>
            </label>
          </div>
          <div class="form-text mb-3">Povinné (GDPR)</div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="gdpr" required>
            <label class="form-check-label" for="gdpr">
              <small>  
                Súhlasím so všeobecnými obchodnými podmienkami.
              </small>
            </label>
          </div>
          <div class="form-text mb-3">Povinné</div>
          <div class="g-recaptcha d-flex justify-content-center mb-4" 
              data-sitekey="6Led7CkgAAAAAG4h0S5_bta1mS-vIzGy3bj6vXb1"
              data-callback="recaptchaCallback"
              data-expired-callback="recaptchaExpiredCallback"></div>
          <button type="submit" class="btn btn-berry-patch w-100">Odoslať</button>
        </form>
      </section>

      <!-- MODALS -->
      {{> privacyPolicyModalPartial }}
      {{> termsConditionsModalPartial }}
      {{> measurementModalPartial }}
    </main>

    <!-- Footer -->
    {{> footer }}

    <script type="text/javascript" src="/assets/js/common.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
